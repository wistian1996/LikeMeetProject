<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutPrincipalMeusEventos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="1">


    <!-- A CardView that contains a TextView -->
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_meus_eventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_linha_verde">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ImageViewMap"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:weightSum="1"
                    android:id="@+id/linearLayout2">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutBotaoEuVou"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/ImageViewMap"
                        android:layout_weight="0.02"
                        android:background="@drawable/icon_shape_button"
                        android:padding="4dp">

                        <Button
                            android:id="@+id/buttonEuVou"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_participar" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/buttonEuVou"
                            android:layout_alignTop="@+id/buttonEuVou"
                            android:layout_toEndOf="@+id/buttonEuVou"
                            android:gravity="center"
                            android:paddingRight="2dp"
                            android:text="Eu vou!"
                            android:textColor="@color/colorPrimary" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/icon_shape_button">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:text="Curtir!"
                            android:textColor="@color/caldroid_white" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageViewMap"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY" />

                <ProgressBar
                    android:id="@+id/progressBarMapa"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="50dp"
                    android:foregroundGravity="center_horizontal"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/linearLayout2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewFotoPerfil"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/perfil" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/imageViewFotoPerfil"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageViewFotoPerfil"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDescricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:background="@color/colorPrimary"
                        android:text="Franklin Wistian Confirmou presença no evento: Truco do paulista."
                        android:textColor="@color/caldroid_black" />

                    <TextView
                        android:id="@+id/textViewDataHistorico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="15/06/2017 às 20:58" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageViewFotoPerfil">


                    <TextView
                        android:id="@+id/textViewEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorPrimary"
                        android:text="Avenida São João Batista, 651 - 1 andar - Ponto Novo, Aracaju - SE, 49097-000" />


                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

