<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutPrincipalMeusEventos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="1">


    <!-- A CardView that contains a TextView -->
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_meus_eventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_linha_verde"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/relativeLayout3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/mapViewCardHistorico"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/relativeLayout144"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_marginRight="3dp"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/relativeLayout14"
                            android:layout_below="@+id/mapViewCardHistorico"
                            android:layout_toEndOf="@+id/relativeLayout14"
                            android:background="@drawable/icon_shape_button"
                            android:padding="4dp">

                            <Button
                                android:id="@+id/ver"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_localizacao_branco" />

                            <TextView
                                android:id="@+id/textViewver"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/ver"
                                android:gravity="center"
                                android:paddingRight="2dp"
                                android:text="Quero ver!"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayout14"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="3dp"
                            android:layout_below="@+id/mapViewCardHistorico"
                            android:layout_weight="1"
                            android:background="@drawable/icon_shape_button"
                            android:padding="4dp">

                            <Button
                                android:id="@+id/buttonEuVou"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/icon_participar" />

                            <TextView
                                android:id="@+id/textViewEuVou"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignBottom="@+id/buttonEuVou"
                                android:layout_alignTop="@+id/buttonEuVou"
                                android:layout_toEndOf="@+id/buttonEuVou"
                                android:gravity="center"
                                android:paddingRight="2dp"
                                android:text="Eu vou!"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>
                    </LinearLayout>

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapViewCardHistorico"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/perfil" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/imageView8"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView8"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/colorPrimary"
                            android:text="Franklin Wistian Confirmou presença no evento: Truco do paulista às 21:00 horas."
                            android:textColor="@color/caldroid_black" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imageView8">


                        <TextView
                            android:id="@+id/textView14568"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:text="Avenida São João Batista, 651 - 1 andar - Ponto Novo, Aracaju - SE, 49097-000" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>

