<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/colorPrimary"
    android:weightSum="1">


    <!-- A CardView that contains a TextView -->
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageViewFoto"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
        >


            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Data: "
                android:id="@+id/textViewInfoData"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/relativeLayout8" />

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Horário: "
                android:id="@+id/textViewInfoHorario"
                android:layout_below="@+id/textViewInfoData"
                android:layout_alignStart="@+id/textViewInfoData" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="05/03/2017"
                android:id="@+id/textViewData"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="23:45"
                android:id="@+id/textViewHorario"
                android:layout_alignTop="@+id/textViewInfoHorario"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Entrada: "
                android:textColor="@color/colorAccent"
                android:id="@+id/textViewInfoEntrada"
                android:layout_below="@+id/textViewInfoHorario"
                android:layout_toEndOf="@+id/relativeLayout8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="20reais"
                android:id="@+id/textViewEntrada"
                android:layout_above="@+id/textViewinfoIdade"
                android:layout_alignEnd="@+id/textViewHorario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Idade mínima: "
                android:id="@+id/textViewinfoIdade"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/textViewInfoEntrada"
                android:layout_toEndOf="@+id/relativeLayout8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="18"
                android:id="@+id/textViewIdadeMinima"
                android:layout_alignTop="@+id/textViewinfoIdade"
                android:layout_alignEnd="@+id/textViewFluxoMax" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fluxo Max: "
                android:id="@+id/textView21"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/textViewinfoIdade"
                android:layout_toEndOf="@+id/relativeLayout8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5000000"
                android:id="@+id/textViewFluxoMax"
                android:layout_alignTop="@+id/textView21"
                android:layout_alignEnd="@+id/textViewEntrada" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textViewInfoCategoria"
                android:paddingRight="4dp"
                android:id="@+id/relativeLayout8"
                android:layout_alignBottom="@+id/textViewInfoCategoria">

                <TextView
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nome do evento"
                    android:id="@+id/textViewNome"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Descricação do evento que pode conter ate 100 caracteres"
                    android:id="@+id/textViewDescricao"
                    android:layout_below="@+id/textViewNome"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Categoria: "
                android:id="@+id/textViewInfoCategoria"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/textView21"
                android:layout_toStartOf="@+id/textViewData" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Esportes"
                android:id="@+id/textViewCategoria"
                android:layout_below="@+id/textViewFluxoMax"
                android:layout_alignBottom="@+id/textViewInfoCategoria"
                android:layout_alignEnd="@+id/textViewIdadeMinima" />


        </RelativeLayout>

        <View   android:id="@+id/firstDivider"
            android:layout_height="0.5dp"
            android:layout_width="fill_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            android:layout_below="@+id/textViewInfoCategoria"
            android:layout_alignParentEnd="true" />

    </android.support.v7.widget.CardView>


</LinearLayout>

