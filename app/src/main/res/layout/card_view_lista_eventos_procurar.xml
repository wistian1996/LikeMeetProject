<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0.5dp"
    android:weightSum="1">


    <!-- A CardView that contains a TextView -->
    <!-- A CardView that contains a TextView -->



    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_evento"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageViewFoto"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        android:layout_weight="82.50">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_weight="82.50">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:id="@+id/relativeLayout4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/relativeLayout5"
                android:layout_alignBottom="@+id/relativeLayout5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:id="@+id/textViewDescricao"
                    android:layout_below="@+id/textViewNome"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewNome"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCategoria"
               android:alpha="254"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/esporte"

                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/relativeLayout5"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/imageViewCategoria">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gratuita"
                    android:id="@+id/textViewTaxa"
                    android:layout_below="@+id/textView6"
                    android:layout_alignEnd="@+id/textViewIdade" />

                <TextView
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idade mínima: "
                    android:id="@+id/textView6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrada: "
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView20"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:00"
                    android:id="@+id/textViewInfoHorario"
                    android:layout_below="@+id/textViewTaxa"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horário:"
                    android:id="@+id/textView22"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@+id/textView20"
                    android:layout_alignStart="@+id/textView20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/textViewIdade"
                    android:layout_above="@+id/textViewTaxa"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: "
                    android:id="@+id/textView19"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@+id/textView22"
                    android:layout_alignStart="@+id/textView22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/50/2003"
                    android:id="@+id/textViewInfoData"
                    android:layout_below="@+id/textViewInfoHorario"
                    android:layout_alignEnd="@+id/textViewInfoHorario" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
