<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0.5dp"
>


    <!-- A CardView that contains a TextView -->
    <!-- A CardView that contains a TextView -->




    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignTop="@+id/card_view_evento"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/caldroid_black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nome"
                android:id="@+id/textViewNome"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="descricao"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="16dp"
                android:id="@+id/textViewDescricao"
                android:layout_below="@+id/textViewNome"
                android:layout_toRightOf="@+id/imageView7" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView7"
                android:layout_marginLeft="6dp"

                android:src="@drawable/ic_vector_marcador_vermelho"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/textViewDescricao" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
